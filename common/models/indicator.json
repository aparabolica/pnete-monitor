{
  "name": "Indicator",
  "base": "PersistedModel",
  "idInjection": true,
  "strict": true,  
  "options": {
    "validateUpsert": true
  },
  "http": {
    "path": "indicators"
  },
  "properties": {
    "description": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true,
      "default": "discursive"
    },
    "verificationMethod": {
      "type": "string"
    },
    "baseline": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "axis": {
      "type": "belongsTo",
      "model": "Axis",
      "foreignKey": "axisId"
    },
    "organizations": {
      "type": "hasAndBelongsToMany",
      "model": "Organization",
      "foreignKey": ""
    },
    "actions": {
      "type": "hasAndBelongsToMany",
      "model": "Action",
      "foreignKey": ""
    },
    "assessments": {
      "type": "hasMany",
      "model": "Assessment",
      "foreignKey": "indicatorId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
