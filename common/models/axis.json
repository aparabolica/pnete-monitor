{
  "name": "Axis",
  "base": "PersistedModel",
  "idInjection": false,
  "strict": true,  
  "options": {
    "validateUpsert": true
  },
  "http": {
    "path": "axes"
  },
  "properties": {
    "id": {
      "type": "number",
      "id": true,
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "color": {
      "type": "string",
      "required": true
    },
    "blog": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "actions": {
      "type": "hasMany",
      "model": "Action",
      "foreignKey": "axisId"
    },
    "indicators": {
      "type": "hasMany",
      "model": "Indicator",
      "foreignKey": "axisId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
