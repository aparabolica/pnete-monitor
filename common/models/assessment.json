{
  "name": "Assessment",
  "base": "PersistedModel",
  "idInjection": true,
  "strict": true,  
  "options": {
    "validateUpsert": true
  },
  "http": {
    "path": "assesments"
  },
  "properties": {
    "status": {
      "type": "string",
      "required": true
    },
    "analysis": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "cicle": {
      "type": "belongsTo",
      "model": "Cicle",
      "foreignKey": "cicleId"
    },
    "indicator": {
      "type": "belongsTo",
      "model": "Indicator",
      "foreignKey": "indicatorId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
