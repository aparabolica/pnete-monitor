{
  "name": "Organization",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "http": {
    "path": "organizations"
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "shortName": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "website": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "members": {
      "type": "hasMany",
      "model": "user",
      "foreignKey": "organizationId"
    },
    "indicators": {
      "type": "hasAndBelongsToMany",
      "model": "Indicator",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
