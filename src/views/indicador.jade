article#indicador
  header.indicador-header
    .container
      .twelve.columns
        h1 {{indicador.indicador}}
  
  section#question
    .container
      .two.columns
        a.eixo-icon.blue(ui-sref="eixo({eixoId: 1})") {{indicador.category}}
      .six.columns
        h2 {{indicador.pergunta}}
    .replies
      .container
        .ten.columns.offset-by-two
          .replies-header
            .filters
              span.main-label Visualizando: 
              .filter.dropdown.period
                //- span.label Período
                span.current 2014 
                span.icon.icon-chevron-down
                ul
                  li 2011
                  li 2012
                  li 2013
            h3 Responsáveis e suas respostas
      ul
        li.reply(ng-repeat="response in indicador.responses" ng-class="{'no-response': !response.response}")
          .container
            .four.columns.offset-by-two
              .avatar-container
                .avatar {{response.slug}}
              h4 {{response.responsible}}
              p.reply {{response.means}}
            .six.columns
              .response
                p {{response.response}}
        li.reply.no-response
          .container
            .four.columns.offset-by-two
              .avatar-container
                .avatar MTE DETRAE
              h4 Ministério do Trabalho e Emprego (DETRAE)
              p.reply.not Não respondeu
            .six.columns
              .response
                p Solicitação enviada 
                  span.since {{since}}, 
                  span.date {{date}}
