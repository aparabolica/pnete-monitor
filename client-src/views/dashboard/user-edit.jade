form(ng-submit="submit(user)")
  p
    label(for="name_input") Nome
    input#name_input(type="text" ng-model="user.name")
  p
    label(for="email_input") Email
    input#email_input(type="email" ng-model="user.email")
  p
    label(for="verified_input") Email verificado
    span.checkbox-list.row
      span.checkbox-item
        input#verified_input(type="checkbox" ng-model="user.emailVerified")
        label(for="verified_input") Email já está verificado
  p
    label(for="admin_input") Administrador
    span.checkbox-list.row
      span.checkbox-item
        input#admin_input(type="checkbox" ng-model="user.isAdmin")
        label(for="admin_input") Este usuário é administrador

  section#organizations
    h3 Organização
    .organization-search.live-add
      .input-container
        input(type="text" ng-model="orgSearch" placeholder="Buscar organizações")
      table.results-table(ng-show="organizations.length")
        thead
          tr
            th Nome
            th.action Selecionar
        tbody
          tr(ng-repeat="organization in organizations" ng-hide="organizationListed(organization)")
            td {{organization.name}}
            td
              a.icon.icon-add-to-list(href="javascript:void(0);" ng-click="addOrganization(organization)")
    p(ng-show="user.organizationId")
      strong Organização do usuário:
    table(ng-show="user.organizationId")
      thead
        tr
          th Nome
          th.action Remover
      tbody
        tr
          td {{userOrganization.name}}
          td
            a.icon.icon-cross(href="javascript:void(0);" ng-click="removeOrganization()")
  p
    input(type="submit" value="Salvar")

form(ng-submit="updatePwd(pwd)" ng-show="user.id")
  h3 Atualizar senha do usuário
  p
    label(for="pwd_input") Senha
    input#pwd_input(type="password" ng-model="pwd.password")
  p
    label(for="pwd_repeat_input") Repetir senha
    input#pwd_repeat_input(type="password" ng-model="pwd.password_repeat")
  p
    input(type="submit" value="Enviar")
