form(ng-submit="submit(template)")
  p
    label(for="name_input") Nome do template
    input#name_input(type="text" ng-model="template.name")
  p
    label(for="subject_input") Assunto
    input#subject_input(type="text" ng-model="template.subject")
  p
    label(for="content_input") Corpo da mensagem
    textarea#content_input(ng-model="template.text")
  p
    input(type="submit" value="Salvar template")
