section#dashboard
  header#dashboard-header
    .container
      .three.columns
        h1
          a(ui-sref="dashboard") Painel de Controle
      .nine.columns
        nav#dashboard-breadcrumbs
  .container
    .three.columns
      nav#dashboard-nav
        ul
          li
            a(ui-sref="dashboard.cicle" ui-sref-active="active") Ciclos
          li
            a(ui-sref="dashboard.action" ui-sref-active="active") Ações
          li
            a(ui-sref="dashboard.eixo" ui-sref-active="active") Eixos
          li
            a(ui-sref="dashboard.indicador" ui-sref-active="active") Indicadores
          li
            a(ui-sref="dashboard.organization" ui-sref-active="active") Organizações
          li
            a(ui-sref="dashboard.user" ui-sref-active="active") Usuários
        ul
          li
            a(href="#") Meu perfil
          li
            a(href="#") Minhas perguntas
        ul
          li
            a(href="javascript:void(0);" ng-click="logout()") Sair
    .nine.columns
      section#dashboard-content(ui-view)
        .six.columns.alpha
          h2 Conteúdo
          table
            thead
              tr
                th Tipo de conteúdo
                th Quantidade
            tbody
              tr 
                td Ciclos
                td {{count.cicle.count}}
              tr
                td Ações
                td {{count.action.count}}
              tr
                td Eixos
                td {{count.axis.count}}
              tr
                td Indicadores
                td {{count.indicator.count}}
              tr
                td Organizações
                td {{count.organization.count}}
              tr 
                td Usuários
                td {{count.user.count}}
        .six.columns.omega
          h2 Monitoramento
          .row
            replied-percent(ratio="{'questions':130,'replied':60}")
          .row
            h3 Organizações pendentes
