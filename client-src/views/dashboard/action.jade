header.dashboard-inner-header
  h2
    a(ui-sref="dashboard.action") Ações
  a(ui-sref="dashboard.action.edit") + Nova ação
section.dashboard-inner-content(ui-view)
  table
    thead
      tr
        th ID
        th Descrição
        th.action Editar
        th.action Remover
    tbody
      tr(ng-repeat="action in actions")
        td {{action.id}}
        td {{action.description}}
        td 
          a.icon.icon-pencil(ui-sref="dashboard.action.edit({'id': action.id})")
        td 
          a.icon.icon-cross(href="javascript:void(0);")
