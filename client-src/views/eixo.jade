article#eixo
  header.eixo-header.row
    .container
      .four.columns
        h1.eixo-bg(style="background:{{eixo.color}};") {{eixo.name}}
        p.meta 
          span {{indicadores.length}} 
          | indicadores
        p.meta
          span {{organizations.length}} 
          | organizações
      .eight.columns
        .download
          p
            span.icon-download 
            | Baixar dados em CSV (em breve)
          p
            span.icon-download 
            | Baixar dados em PDF (em breve)
        .description.eixo-border(style="border-color:{{eixo.color}};")
          p {{eixo.description}}
  .container.row
    .four.columns(ng-show="actions.length")
      aside#eixo-aside
        #eixo-actions
          h2 Ações do eixo
          ul.action-list
            li(ng-repeat="action in actions")
              span.number {{action.id}}
              p {{action.description}}
    .eight.columns
      section#indicadores
        h2 Indicadores
        ul.indicadores-list
          li
          article.indicador(ng-repeat="indicador in indicadores")
            h3 
              a(ui-sref="indicador({indicadorId: indicador.id})") {{indicador.description}}
