{
  "name": "Invite",
  "plural": "convites",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "http": {
    "path": "convite"
  },
  "properties": {
    "email": {
      "type": "string",
      "required": true
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "expiresAt": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "default": "pending",
      "enum": [
        "pending",
        "sent",
        "accepted",
        "rejected"
      ]
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
